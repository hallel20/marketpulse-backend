# Application Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/marketpulse
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/marketpulse_test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@marketpulse.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_BUCKET_NAME=marketpulse-assets
AWS_REGION=us-east-1

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Settings
CACHE_TTL=3600